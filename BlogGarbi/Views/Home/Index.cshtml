@model List<Postagem>
@{
    ViewData["Title"] = "Home Page";
}

<div class="p-5 mb-4 bg-success rounded-5 text-white text-center">
    <h1 class="display-6 fw-bold">Blog do Hunter</h1>
    <p class=" fs-5">Confira aqui as ultimas noticias <strong>HxH!!!</strong> </p>
</div>

<div class="container pb-5">
    <div class="row row-cols-1 row-cols-sm-2 g-3">
        @foreach (Postagem postagem in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="row h-100 g-0">
                        <div class="col-md-4">
                            <img src="@postagem.Thumbnail" class="img-fluid rounded-start h-100 object-fit-cover"
                                alt="@postagem.Nome">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <button class="btn btn-sm btn-dark mb-2">
                                    @postagem.Categoria.Nome
                                </button>
                                <h5 class="card-title">@postagem.Nome</h5>
                                <p class="card-text">@postagem.Descricao</p>
                                <p class="card-text d-flex justify-content-between">
                                    <small class="text-body-secondary">
                                        Postado em: @postagem.DataPostagem.ToString("dd/MM/yyyy")
                                    </small>
                                    <a asp-action= "Postagem" asp-route-id="@postagem.Id">"Ler mais"</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>