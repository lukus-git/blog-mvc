@model List<Postagem>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Blog do Garbi</h1>
    <p>Confira aqui as ultimas noticias <strong>HxH!!!</strong> </p>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 g-3">
        @foreach (Postagem postagem in Model)
        {
            <div class="col">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@postagem.Thumbnail" class="img-fluid rounded-start h-100 object-cover"
                                alt="@postagem.Nome">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@postagem.Nome</h5>
                                <p class="card-text">@postagem.Descricao</p>
                                <p class="card-text">
                                    <small class="text-body-secondary">
                                        Postado em: @postagem.DataPostagem.ToString("dd/MM/yyyy")
                                    </small>
                                </p>
                                <a asp-action=>"Postagem"</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>